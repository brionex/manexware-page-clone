---
interface Props {
  icon: string
  title: string
  description: string
  link: string
}

const { icon, title, description, link } = Astro.props
---

<article
  class="p-10 bg-gray-300 rounded-xl basis-80 flex flex-col gap-5 items-center flex-grow"
>
  <i
    class={`${icon} bg-blue-900 text-white p-6 text-5xl rounded-full w-28 h-28 overflow-hidden aspect-square text-center content-center`}
  ></i>
  <h3 class="text-xl font-bold text-blue-900">{title}</h3>
  <p class="text-pretty w-full max-w-[500px]">{description}</p>
  <a
    href={link}
    class="text-blue-900 font-medium hover:underline flex-grow content-end"
    >Mas informaci√≥n</a
  >
</article>

<style>
  article {
    animation: showCard both;
    animation-timeline: view();
    animation-range: entry 0% cover 50%;
  }

  @keyframes showCard {
    0% {
      transform: scale(0);
    }

    100% {
      transform: scale(1);
    }
  }
</style>